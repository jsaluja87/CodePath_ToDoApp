<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#757575" />
            <gradient android:angle="-90" android:startColor="#757575" android:endColor="#757575"  />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#444647" />
            <gradient android:angle="-90" android:startColor="#444647" android:endColor="#444647" />
        </shape>
    </item>

</selector>