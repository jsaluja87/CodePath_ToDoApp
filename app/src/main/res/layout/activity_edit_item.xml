<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/FragColor"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="codepathtodoapp.myandroid.com.todoapp.EditDialogue">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/ScndActHeader"
        android:textStyle="italic"
        android:textColor="@color/FragHeaderColor"
        android:textSize="28sp"
        android:id="@+id/ScndActTextViewId"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ScndActEditTextId"
        android:textColor="@color/FragTextColor"
        android:layout_below="@+id/ScndActButtonId"
        android:layout_alignEnd="@+id/ScndActButtonId"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ScndActPriorityEditTextId"
        android:textColor="@color/FragPriorityETColor"
        android:layout_below="@+id/ScndActEditTextId"
        android:layout_marginTop="10dp"
        android:layout_alignEnd="@+id/ScndActEditTextId"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ScndActButton"
        android:id="@+id/ScndActButtonId"
        android:textColor="@color/FragButtonETColor"
        android:layout_alignTop="@+id/ScndActTextViewId"
        android:layout_alignParentEnd="true" />

    <DatePicker
        android:id="@+id/date_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:headerBackground="@color/FragDatePickerHBColor"
        android:calendarViewShown="false"
        android:layout_below="@+id/ScndActPriorityEditTextId"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
